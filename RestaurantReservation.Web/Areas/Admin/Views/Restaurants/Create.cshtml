@model RestaurantCreateViewModel
@{
    ViewData["Title"] = "Create Restaurant";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-plus-circle me-2"></i>Create Restaurant</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Restaurant Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter restaurant name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your restaurant..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Contact Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="contact@restaurant.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Website" class="form-label">Website URL</label>
                            <input asp-for="Website" class="form-control" type="url" placeholder="https://www.restaurant.com" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Logo" class="form-label">Logo</label>
                        <input asp-for="Logo" class="form-control" type="file" accept="image/*" />
                        <div class="form-text">Recommended size: 200x200 pixels. Supported formats: JPG, PNG, GIF.</div>
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Create Restaurant
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-info-circle me-2"></i>Tips</h5>
                <ul class="mb-0 ps-3">
                    <li>Choose a unique and memorable name</li>
                    <li>Provide a compelling description to attract customers</li>
                    <li>Upload a high-quality logo</li>
                    <li>After creating, you can add branches</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

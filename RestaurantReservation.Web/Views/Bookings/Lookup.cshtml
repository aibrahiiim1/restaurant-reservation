@{
    ViewData["Title"] = "Find Your Booking";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-search display-4 text-primary"></i>
                        <h2 class="mt-3">Find Your Booking</h2>
                        <p class="text-muted">Enter your booking reference to view or manage your reservation</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.Error
                        </div>
                    }

                    <form asp-action="Lookup" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="reference" class="form-label">Booking Reference</label>
                            <input type="text" name="reference" id="reference" class="form-control form-control-lg text-center font-monospace" 
                                   placeholder="e.g., BR241205ABC123" required />
                            <div class="form-text">
                                Your booking reference was sent to your email when you made the reservation
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search me-2"></i>Find Booking
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-2">Don't have a booking yet?</p>
                        <a asp-controller="Restaurants" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-calendar-plus me-2"></i>Make a Reservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

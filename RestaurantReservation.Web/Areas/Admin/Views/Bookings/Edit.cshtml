@model BookingAdminEditViewModel
@{
    ViewData["Title"] = "Edit Booking " + Model.BookingReference;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-pencil me-2"></i>Edit Booking
        <small class="text-muted">@Model.BookingReference</small>
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BookingReference" />
                    <input type="hidden" asp-for="BranchId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <h5 class="mb-3"><i class="bi bi-person me-2"></i>Guest Information</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="GuestName" class="form-label">Guest Name <span class="text-danger">*</span></label>
                            <input asp-for="GuestName" class="form-control" />
                            <span asp-validation-for="GuestName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="GuestEmail" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="GuestEmail" class="form-control" type="email" />
                            <span asp-validation-for="GuestEmail" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="GuestPhone" class="form-label">Phone</label>
                        <input asp-for="GuestPhone" class="form-control" type="tel" />
                        <span asp-validation-for="GuestPhone" class="text-danger"></span>
                    </div>
                    
                    <hr>
                    
                    <h5 class="mb-3"><i class="bi bi-calendar-check me-2"></i>Booking Details</h5>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="BookingDate" class="form-label">Date <span class="text-danger">*</span></label>
                            <input asp-for="BookingDate" class="form-control" type="date" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="BookingTime" class="form-label">Time <span class="text-danger">*</span></label>
                            <input asp-for="BookingTime" class="form-control" type="time" />
                            <span asp-validation-for="BookingTime" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DurationMinutes" class="form-label">Duration (mins)</label>
                            <input asp-for="DurationMinutes" class="form-control" type="number" min="30" max="480" step="15" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="PartySize" class="form-label">Party Size <span class="text-danger">*</span></label>
                            <input asp-for="PartySize" class="form-control" type="number" min="1" max="50" />
                            <span asp-validation-for="PartySize" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="TableId" class="form-label">Table <span class="text-danger">*</span></label>
                            <select asp-for="TableId" asp-items="Model.TableList" class="form-select">
                                <option value="">Select Table</option>
                            </select>
                            <span asp-validation-for="TableId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" asp-items="Model.StatusList" class="form-select"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <h5 class="mb-3"><i class="bi bi-gift me-2"></i>Additional Details</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Occasion" class="form-label">Occasion</label>
                            <select asp-for="Occasion" asp-items="Html.GetEnumSelectList<OccasionType>()" class="form-select"></select>
                            <span asp-validation-for="Occasion" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SpecialRequests" class="form-label">Special Requests</label>
                        <textarea asp-for="SpecialRequests" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="SpecialRequests" class="text-danger"></span>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Booking Info</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-6">Reference</dt>
                    <dd class="col-6"><code>@Model.BookingReference</code></dd>
                    
                    <dt class="col-6">Status</dt>
                    <dd class="col-6">
                        <span class="badge bg-@(Model.Status switch {
                            BookingStatus.Confirmed => "success",
                            BookingStatus.Pending => "warning",
                            BookingStatus.Cancelled => "danger",
                            _ => "secondary"
                        })">@Model.Status</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

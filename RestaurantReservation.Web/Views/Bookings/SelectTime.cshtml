@model RestaurantReservation.Web.Models.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Select Time";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-clock me-2"></i>Select Time Slot</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        <strong>@Model.RestaurantName - @Model.BranchName</strong><br>
                        <i class="bi bi-calendar me-1"></i>@Model.BookingDate.ToString("dddd, MMMM d, yyyy") |
                        <i class="bi bi-people me-1"></i>@Model.PartySize guests
                    </p>

                    <!-- Progress Steps -->
                    <div class="d-flex justify-content-between mb-4">
                        <div class="text-center flex-fill">
                            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-check"></i>
                            </div>
                            <div class="small mt-1">Date & Party</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">2</div>
                            <div class="small mt-1">Time</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">3</div>
                            <div class="small mt-1">Table</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">4</div>
                            <div class="small mt-1">Details</div>
                        </div>
                    </div>

                    @if (Model.AvailableTimeSlots.Any())
                    {
                        <form asp-action="SelectTable" method="post">
                            <input type="hidden" asp-for="BranchId" />
                            <input type="hidden" asp-for="PartySize" />
                            <input type="hidden" asp-for="BookingDate" />
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold">Select a Time</label>
                                
                                @{
                                    var groupedSlots = Model.AvailableTimeSlots
                                        .GroupBy(s => s.MealType)
                                        .OrderBy(g => g.Key);
                                }
                                
                                @foreach (var group in groupedSlots)
                                {
                                    <h6 class="mt-3 text-muted">@group.Key</h6>
                                    <div class="row g-2">
                                        @foreach (var slot in group.OrderBy(s => s.StartTime))
                                        {
                                            <div class="col-4 col-md-3 col-lg-2">
                                                <input type="radio" class="btn-check" name="SelectedTime" 
                                                       id="slot-@slot.Id" value="@slot.StartTime" autocomplete="off">
                                                <label class="btn btn-outline-primary w-100" for="slot-@slot.Id">
                                                    @slot.StartTime.ToString(@"hh\:mm")
                                                </label>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Preferred Table Location (Optional)</label>
                                <select asp-for="PreferredLocation" class="form-select">
                                    <option value="">Any Location</option>
                                    <option value="Indoor">Indoor</option>
                                    <option value="Outdoor">Outdoor</option>
                                    <option value="Terrace">Terrace</option>
                                    <option value="PrivateRoom">Private Room</option>
                                    <option value="Bar">Bar</option>
                                </select>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back
                                </a>
                                <button type="submit" class="btn btn-primary flex-grow-1">
                                    Continue <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-1 text-muted"></i>
                            <h4 class="mt-3">No Available Times</h4>
                            <p class="text-muted">Sorry, there are no available time slots for the selected date and party size.</p>
                            <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-1"></i>Try Different Date
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model RestaurantReservation.Web.Models.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Select Table";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-grid me-2"></i>Select Your Table</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        <strong>@Model.RestaurantName - @Model.BranchName</strong><br>
                        <i class="bi bi-calendar me-1"></i>@Model.BookingDate.ToString("dddd, MMMM d, yyyy") |
                        <i class="bi bi-clock me-1"></i>@Model.SelectedTime?.ToString(@"hh\:mm") |
                        <i class="bi bi-people me-1"></i>@Model.PartySize guests
                    </p>

                    <!-- Progress Steps -->
                    <div class="d-flex justify-content-between mb-4">
                        <div class="text-center flex-fill">
                            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-check"></i>
                            </div>
                            <div class="small mt-1">Date & Party</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-check"></i>
                            </div>
                            <div class="small mt-1">Time</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">3</div>
                            <div class="small mt-1">Table</div>
                        </div>
                        <div class="text-center flex-fill">
                            <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">4</div>
                            <div class="small mt-1">Details</div>
                        </div>
                    </div>

                    @if (Model.AvailableTables.Any())
                    {
                        <form asp-action="GuestDetails" method="post">
                            <input type="hidden" asp-for="BranchId" />
                            <input type="hidden" asp-for="PartySize" />
                            <input type="hidden" asp-for="BookingDate" />
                            <input type="hidden" asp-for="SelectedTime" />
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold">Available Tables</label>
                                
                                @{
                                    var groupedTables = Model.AvailableTables
                                        .GroupBy(t => t.LocationType)
                                        .OrderBy(g => g.Key);
                                }
                                
                                @foreach (var group in groupedTables)
                                {
                                    <h6 class="mt-3">
                                        @switch (group.Key)
                                        {
                                            case RestaurantReservation.Web.Models.Entities.TableLocationType.Indoor:
                                                <i class="bi bi-house me-1"></i>
                                                break;
                                            case RestaurantReservation.Web.Models.Entities.TableLocationType.Outdoor:
                                                <i class="bi bi-tree me-1"></i>
                                                break;
                                            case RestaurantReservation.Web.Models.Entities.TableLocationType.Terrace:
                                                <i class="bi bi-sun me-1"></i>
                                                break;
                                            case RestaurantReservation.Web.Models.Entities.TableLocationType.PrivateRoom:
                                                <i class="bi bi-door-closed me-1"></i>
                                                break;
                                            case RestaurantReservation.Web.Models.Entities.TableLocationType.Bar:
                                                <i class="bi bi-cup-straw me-1"></i>
                                                break;
                                        }
                                        @group.Key
                                    </h6>
                                    <div class="row g-3">
                                        @foreach (var table in group)
                                        {
                                            <div class="col-md-6">
                                                <div class="form-check card h-100">
                                                    <input type="radio" class="form-check-input visually-hidden" 
                                                           name="SelectedTableId" id="table-@table.Id" value="@table.Id">
                                                    <label class="form-check-label card-body d-block" for="table-@table.Id" style="cursor: pointer;">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div>
                                                                <h6 class="mb-1">Table @table.TableNumber</h6>
                                                                <small class="text-muted">
                                                                    <i class="bi bi-people me-1"></i>@table.MinCapacity - @table.MaxCapacity guests
                                                                </small>
                                                                @if (!string.IsNullOrEmpty(table.Description))
                                                                {
                                                                    <p class="mb-0 mt-1 small">@table.Description</p>
                                                                }
                                                            </div>
                                                            <div class="table-select-indicator">
                                                                <i class="bi bi-circle fs-4 text-muted"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                                    <i class="bi bi-arrow-left me-1"></i>Back
                                </button>
                                <button type="submit" class="btn btn-primary flex-grow-1">
                                    Continue <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-table display-1 text-muted"></i>
                            <h4 class="mt-3">No Tables Available</h4>
                            <p class="text-muted">Sorry, there are no tables available for the selected time.</p>
                            <button type="button" class="btn btn-primary" onclick="history.back()">
                                <i class="bi bi-arrow-left me-1"></i>Select Different Time
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-check.card:has(input:checked) {
            border-color: var(--bs-primary);
            background-color: rgba(13, 110, 253, 0.1);
        }
        .form-check.card:has(input:checked) .table-select-indicator i {
            color: var(--bs-primary) !important;
        }
        .form-check.card:has(input:checked) .table-select-indicator i::before {
            content: "\F26B"; /* bi-check-circle-fill */
        }
    </style>
}

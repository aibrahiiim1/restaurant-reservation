@model List<RestaurantReservation.Web.Models.ViewModels.RestaurantViewModel>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-dark text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Find Your Perfect Dining Experience</h1>
                <p class="lead mb-4">Discover and book tables at the finest restaurants. Easy reservations, special occasions, unforgettable moments.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Restaurants" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-search me-2"></i>Browse Restaurants
                    </a>
                    <a asp-controller="Bookings" asp-action="Lookup" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-calendar-check me-2"></i>Find Booking
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="bi bi-calendar-check display-1"></i>
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="py-4 bg-light">
    <div class="container">
        <form asp-controller="Restaurants" asp-action="Index" method="get" class="row g-3 justify-content-center">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control form-control-lg" placeholder="Search restaurants or cuisine...">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Featured Restaurants -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Restaurants</h2>
        
        @if (Model != null && Model.Any())
        {
            @foreach (var restaurant in Model)
            {
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-3">
                        @if (!string.IsNullOrEmpty(restaurant.LogoUrl))
                        {
                            <img src="@restaurant.LogoUrl" alt="@restaurant.Name" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        <div>
                            <h3 class="mb-0">
                                <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@restaurant.Id" class="text-decoration-none text-dark">
                                    @restaurant.Name
                                </a>
                            </h3>
                            <p class="text-muted mb-0">@restaurant.Description</p>
                        </div>
                    </div>
                    
                    @if (restaurant.Branches.Any())
                    {
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var branch in restaurant.Branches)
                            {
                                <div class="col">
                                    <div class="card h-100 shadow-sm">
                                        @if (!string.IsNullOrEmpty(branch.PhotoUrl))
                                        {
                                            <img src="@branch.PhotoUrl" class="card-img-top" alt="@branch.Name" style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                                <i class="bi bi-building text-white" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title">@branch.Name</h5>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="bi bi-geo-alt me-1"></i>@branch.City
                                                </small>
                                            </p>
                                            @if (!string.IsNullOrEmpty(branch.Cuisine))
                                            {
                                                <p class="card-text">
                                                    <span class="badge bg-secondary">@branch.Cuisine</span>
                                                </p>
                                            }
                                            <div class="d-flex align-items-center mb-3">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Round(branch.AverageRating))
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-warning"></i>
                                                    }
                                                }
                                                <span class="ms-2 text-muted">(@branch.ReviewCount reviews)</span>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-grid gap-2">
                                                <a asp-controller="Restaurants" asp-action="Branch" asp-route-id="@branch.Id" class="btn btn-outline-primary">
                                                    View Details
                                                </a>
                                                <a asp-controller="Bookings" asp-action="Create" asp-route-branchId="@branch.Id" class="btn btn-primary">
                                                    <i class="bi bi-calendar-plus me-1"></i>Book Now
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-shop display-1 text-muted"></i>
                <h4 class="mt-3">No restaurants available</h4>
                <p class="text-muted">Check back later for new listings!</p>
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Us</h2>
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-lightning-charge fs-2"></i>
                </div>
                <h4>Instant Booking</h4>
                <p class="text-muted">Real-time availability and instant confirmation for your reservations.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-qr-code fs-2"></i>
                </div>
                <h4>QR Code Confirmation</h4>
                <p class="text-muted">Receive a unique QR code for easy check-in at the restaurant.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-gift fs-2"></i>
                </div>
                <h4>Loyalty Rewards</h4>
                <p class="text-muted">Earn points with every booking and unlock exclusive offers.</p>
            </div>
        </div>
    </div>
</section>

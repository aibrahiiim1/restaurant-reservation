@model ReviewModerationViewModel
@{
    ViewData["Title"] = "Moderate Review";
    var review = ViewBag.Review as Review;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-shield-check me-2"></i>Moderate Review</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Review Content (Read-only) -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-chat-quote me-2"></i>Review Content</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="text-muted small">Guest</label>
                    <p class="fw-bold mb-0">@review?.GuestName</p>
                </div>
                
                <div class="mb-3">
                    <label class="text-muted small">Branch</label>
                    <p class="mb-0">@review?.Branch?.Name</p>
                </div>
                
                <div class="mb-3">
                    <label class="text-muted small">Rating</label>
                    <div class="fs-4">
                        @if (review != null)
                        {
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rating)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star text-warning"></i>
                                }
                            }
                        }
                    </div>
                </div>
                
                <div>
                    <label class="text-muted small">Comment</label>
                    <div class="p-3 bg-light rounded">
                        @if (!string.IsNullOrEmpty(review?.Comment))
                        {
                            <p class="mb-0">@review.Comment</p>
                        }
                        else
                        {
                            <p class="mb-0 text-muted fst-italic">No comment provided</p>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Moderation Form -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Moderation Settings</h5>
            </div>
            <div class="card-body">
                <form asp-action="Moderate" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsApproved" class="form-check-input" type="checkbox" />
                                <label asp-for="IsApproved" class="form-check-label">Approved</label>
                            </div>
                            <small class="text-muted">Approved reviews have been verified by admin</small>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsVisible" class="form-check-input" type="checkbox" />
                                <label asp-for="IsVisible" class="form-check-label">Visible</label>
                            </div>
                            <small class="text-muted">Visible reviews appear on the public site</small>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="AdminResponse" class="form-label">Admin Response</label>
                        <textarea asp-for="AdminResponse" class="form-control" rows="4" placeholder="Write a public response to this review..."></textarea>
                        <small class="text-muted">This response will be visible to the public if the review is visible</small>
                        <span asp-validation-for="AdminResponse" class="text-danger"></span>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (!Model.IsApproved)
                    {
                        <form asp-action="Approve" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-lg me-1"></i>Approve & Make Visible
                            </button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-x-lg me-1"></i>Reject
                            </button>
                        </form>
                    }
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="bi bi-eye me-1"></i>View Full Details
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Tips -->
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-lightbulb me-2"></i>Moderation Tips</h5>
                <ul class="mb-0 ps-3 small">
                    <li>Review comments for inappropriate content</li>
                    <li>Respond professionally to negative reviews</li>
                    <li>Thank customers for positive feedback</li>
                    <li>Hidden reviews are not shown publicly</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
